<UserControl x:Class="Prover.GUI.Common.Screens.Dialogs.InformationDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prover.GUI.Modules.QAProver.Screens.PTVerificationViews.VolumeTest"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Center"
          Height="200">
        <StackPanel VerticalAlignment="Center"
                    Width="200">
            <TextBlock Text="{Binding HeaderText}"
                       HorizontalAlignment="Center" />
            
            <Button Command="{Binding DoneCommand}" 
                    Content="DONE" 
                    Margin="0 15 0 5"
                    HorizontalAlignment="Center" 
                    Style="{DynamicResource MaterialDesignFlatButton}" />
        </StackPanel>
    </Grid>
</UserControl>
