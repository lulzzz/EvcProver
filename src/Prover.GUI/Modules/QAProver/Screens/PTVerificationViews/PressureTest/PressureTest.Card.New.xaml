<UserControl x:Class="Prover.GUI.Modules.QAProver.Screens.PTVerificationViews.PressureTest.CardNew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Prover.GUI.Common.Controls;assembly=Prover.GUI.Common"
             xmlns:converters="clr-namespace:Prover.GUI.Common.Converters;assembly=Prover.GUI.Common"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="Transparent"
             TextElement.FontWeight="Light"
             TextElement.FontSize="16"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             mc:Ignorable="d"
             d:DesignWidth="300"
             d:DesignHeight="300">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToHiddenConverter"
                                              TrueValue="Visible"
                                              FalseValue="Collapsed" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Margin="0"
                   FontWeight="Light"
                   Foreground="SlateGray"
                   FontSize="32"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="P" />

        <controls:PercentageControlNew Grid.Row="0"
                                       Grid.Column="1"
                                       Margin="16 0"
                                       DisplayValue="{Binding TestRun.PercentError}"
                                       Passed="{Binding TestRun.HasPassed}" />
        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    Margin="4">
            <UniformGrid Columns="2"
                         Margin="0">
                <controls:ValueDescriptionControl Label="Gauge"
                                                  IsReadOnly="False"
                                                  Value="{Binding GaugePressure, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <controls:ValueDescriptionControl Label="EVC Reading"
                                                  Value="{Binding EvcGasPressure}" />
            </UniformGrid>
            <UniformGrid Columns="2"
                         Margin="0"
                         Visibility="{Binding ShowAtmValues, Converter={StaticResource BoolToHiddenConverter}}">
                <controls:ValueDescriptionControl Label="ATM Gauge"
                                                  IsReadOnly="{Binding IsAtmGaugeReadOnly}"
                                                  Value="{Binding AtmosphericGauge, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <!--<controls:ValueDescriptionControl Label="EVC ATM Reading"
                                                  Value="{Binding EvcAtmPressure}" />-->
            </UniformGrid>
            <UniformGrid Columns="2"
                         Margin="0">
                <controls:ValueDescriptionControl Label="Actual Factor"
                                                  Value="{Binding TestRun.ActualFactor}" />

                <controls:ValueDescriptionControl Label="EVC Factor"
                                                  Value="{Binding TestRun.EvcFactor}" />

            </UniformGrid>
        </StackPanel>
    </Grid>


    <!--**** END PRESSURE **** -->
</UserControl>