<UserControl x:Class="Prover.GUI.Modules.QAProver.Screens.PTVerificationViews.VerificationSet.CardNew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:converters="clr-namespace:Prover.GUI.Common.Converters;assembly=Prover.GUI.Common"
             Background="Transparent"
             TextElement.FontWeight="Light"
             TextElement.FontSize="16"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             mc:Ignorable="d" d:DesignWidth="245">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:BoolToVisibilityConverter x:Key="BoolToHiddenConverter"
                                                  TrueValue="Visible"
                                                  FalseValue="Collapsed" />
        </ResourceDictionary>

    </UserControl.Resources>

    <Border Padding="4"
            Style="{StaticResource TestSectionOuterBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Level, FallbackValue='Level 1'}"
                       Grid.Row="0"
                       FontSize="32"
                       Foreground="Black"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />

            <StackPanel Orientation="Vertical"
                        Grid.Row="1"
                        Margin="4">
                <ContentControl cal:View.Model="{Binding PressureTestViewModel}"
                                cal:View.Context="CardNew"/>
                <ContentControl cal:View.Model="{Binding TemperatureTestViewModel}"
                                cal:View.Context="CardNew"/>
                <ContentControl cal:View.Model="{Binding SuperFactorTestViewModel}"
                                cal:View.Context="CardNew"/>


            </StackPanel>
            <Button Command="{Binding RunTestCommand}"
                    Content="Download"
                    Grid.Row="2"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    Visibility="{Binding ShowDownloadButton, Converter={StaticResource BoolToHiddenConverter}}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center" />

        </Grid>
    </Border>

</UserControl>