<UserControl x:Class="Prover.GUI.Modules.QAProver.Screens.PTVerificationViews.VolumeTest.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:Prover.GUI.Common.Controls;assembly=Prover.GUI.Common"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             mc:Ignorable="d">
    <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth0">
        <StackPanel Orientation="Vertical">
            <materialDesign:ColorZone
                Padding="2"
                Margin="2"
                Content="Volume"
                Mode="PrimaryDark"
                materialDesign:ShadowAssist.ShadowDepth="Depth1" />

            <controls:ValueDescriptionControl Label="Applied Input" Value="{Binding AppliedInput}" />
            <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth0">
                <StackPanel>
                    <materialDesign:ColorZone
                        Padding="5"
                        Margin="5"
                        Content="Uncorrected"
                        Mode="Accent"
                        materialDesign:ShadowAssist.ShadowDepth="Depth1" />
                    <controls:PercentageControl
                        Margin="5"
                        HorizontalAlignment="Center"
                        DisplayValue="{Binding Volume.UnCorrectedPercentError}"
                        Passed="{Binding Volume.UnCorrectedHasPassed}" />

                    <UniformGrid Columns="2" Margin="5">
                        <controls:ValueDescriptionControl Label="Start Reading"
                                                           Value="{Binding StartUncorrected}" />
                        <controls:ValueDescriptionControl Label="End Reading"
                                                           Value="{Binding EndUncorrected}" />
                        <controls:ValueDescriptionControl Label="True Calculated"
                                                           Value="{Binding TrueUncorrected}" />
                        <controls:ValueDescriptionControl Label="EVC Calculated"
                                                           Value="{Binding EvcUncorrected}" />
                        <controls:ValueDescriptionControl Label="Pulse Count"
                                                           Value="{Binding UncorrectedPulseCount}" />
                        <controls:ValueDescriptionControl Label="Multiplier"
                                                           Value="{Binding UnCorrectedMultiplierDescription}" />
                    </UniformGrid>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth0">
                <StackPanel>
                    <materialDesign:ColorZone
                        Padding="5"
                        Margin="5"
                        Content="Corrected"
                        Mode="Accent"
                        materialDesign:ShadowAssist.ShadowDepth="Depth1" />

                    <controls:PercentageControl
                        Margin="5"
                        HorizontalAlignment="Center"
                        DisplayValue="{Binding Volume.CorrectedPercentError}"
                        Passed="{Binding Volume.CorrectedHasPassed}" />

                    <UniformGrid Columns="2" Margin="2 5">

                        <controls:ValueDescriptionControl Label="Start Reading" Value="{Binding StartCorrected}" />
                        <controls:ValueDescriptionControl Label="End Reading" Value="{Binding EndCorrected}" />

                        <controls:ValueDescriptionControl Label="True Calculated"
                                                           Value="{Binding TrueCorrected}" />
                        <controls:ValueDescriptionControl Label="EVC Calculated"
                                                           Value="{Binding EvcCorrected}" />

                        <controls:ValueDescriptionControl Label="Pulse Count"
                                                           Value="{Binding CorrectedPulseCount}" />
                        <controls:ValueDescriptionControl Label="Multiplier"
                                                           Value="{Binding CorrectedMultiplierDescription}" />

                    </UniformGrid>

                </StackPanel>
            </materialDesign:Card>
            <ContentControl Margin="2" cal:View.Model="{Binding EnergyTestItem}" cal:View.Context="Card" />
            <ContentControl Margin="2" cal:View.Model="{Binding MeterDisplacementItem}" cal:View.Context="Card" />
        </StackPanel>
    </materialDesign:Card>
</UserControl>