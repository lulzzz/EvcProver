<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:Prover.GUI.Modules.QAProver.Screens">

    <SolidColorBrush x:Key="BorderBrushColor">#e0e0e0</SolidColorBrush>

    <Style x:Key="TestSectionOuterBorder" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush"
                Value="{StaticResource BorderBrushColor}" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <Style x:Key="SubSectionDividerBorder" 
            BasedOn="{StaticResource TestSectionOuterBorder}"
           TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="BorderThickness"
                Value="0 1 0 0" />
    </Style>
   
</ResourceDictionary>