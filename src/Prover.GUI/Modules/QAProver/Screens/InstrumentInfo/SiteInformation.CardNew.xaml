<UserControl x:Class="Prover.GUI.Modules.QAProver.Screens.InstrumentInfo.SiteInfoCardNew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:designer1="clr-namespace:Prover.GUI.Modules.QAProver.Screens.InstrumentInfo.Designer"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             TextElement.FontSize="22"
             TextElement.FontWeight="Light"            
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="315.5">
    <UserControl.Resources>

        <Style TargetType="{x:Type materialDesign:PackIcon}">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
        </Style>
        
        <Style TargetType="{x:Type Border}" x:Key="InfoSection">
            <Setter Property="Margin" Value="4 8"></Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel  VerticalAlignment="Center" Grid.Row="0" Margin="5">
                <TextBlock FontSize="16" Margin="0" Text="{Binding TestDatePretty, FallbackValue='February 15, 2017'}"/>
                <TextBlock FontSize="38"
                               Text="{Binding Instrument.InstrumentType.Name, FallbackValue=Mini-AT}" 
                               HorizontalAlignment="Center" Margin="0 10 0 5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CorrectorType, FallbackValue='PTZ'}" FontWeight="Medium"/>
                    <TextBlock FontWeight="UltraLight" Text=" | "/>
                    <TextBlock Text="{Binding Instrument.VolumeTest.DriveType.Discriminator, FallbackValue=Mechanical}" FontWeight="Medium"/>
                </StackPanel>
                <TextBlock FontSize="16" 
                           Margin="0 5 0 0"
                           Text="{Binding JobIdDisplay, FallbackValue='Job #12345'}" 
                           HorizontalAlignment="Center" />
            </StackPanel>

            <StackPanel Margin="8 4" 
                        Grid.Row="1"
                        Orientation="Vertical">
                <Border BorderThickness="0 1 0 1"
                        Style="{StaticResource InfoSection}"
                        BorderBrush="LightGray">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <!--<Image Grid.Column="0" Source="{StaticResource InfoIcon}" Width="48" Height="48"/>-->
                        <materialDesign:PackIcon 
                                Foreground="Gray"
                                Kind="InformationOutline" Width="48" Height="48" Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                        <UniformGrid Columns="2" Grid.Column="1" 
                                     HorizontalAlignment="Stretch">
                            <StackPanel Margin="10">
                                <TextBlock  Text="{Binding Instrument.SiteNumber2, FallbackValue='123456789'}" HorizontalAlignment="Center"/>
                                <TextBlock FontSize="12" Text="Company Number" HorizontalAlignment="Center" />
                            </StackPanel>
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding Instrument.SerialNumber, FallbackValue='987654321'}" HorizontalAlignment="Center"/>
                                <TextBlock FontSize="12" Text="Serial Number" HorizontalAlignment="Center" />
                            </StackPanel>
                            <StackPanel Margin="10">
                                <TextBlock  Text="{Binding Instrument.FirmwareVersion, FallbackValue='2.68765'}" HorizontalAlignment="Center"/>
                                <TextBlock FontSize="12" Text="Firmware Version" HorizontalAlignment="Center" />
                            </StackPanel>
                        </UniformGrid>

                    </Grid>
                </Border>
                <StackPanel Orientation="Vertical"
                            >
                    <Border  BorderThickness="0 0 0 1" 
                             Style="{StaticResource InfoSection}"
                             BorderBrush="LightGray">
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon 
                                Kind="Thermometer" Width="48" Height="48" Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                            <UniformGrid Grid.Column="1" Columns="2" 
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Stretch">
                                <StackPanel  >
                                    <TextBlock  Text="{Binding BaseTemperature, FallbackValue='60.0 F'}" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="12" Text="Base T." HorizontalAlignment="Center" />
                                </StackPanel>
                                <StackPanel  >
                                    <TextBlock  Text="-40 to 170 F" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="12" Text="T. Range" HorizontalAlignment="Center" />
                                </StackPanel>
                            </UniformGrid>
                        </Grid>
                    </Border>
                    
                        <Border BorderThickness="0 0 0 1" 
                                Style="{StaticResource InfoSection}"
                             BorderBrush="LightGray">
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="Gauge" 
                                                         Width="48" Height="48" 
                                                         Grid.Column="0"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"/>  
                                <UniformGrid Grid.Column="1" 
                                     Columns="2" 
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Stretch">
                                    <StackPanel Margin="10">
                                        <TextBlock Text="{Binding BasePressure, FallbackValue='14.73 PSIA'}"
                                               HorizontalAlignment="Center" />
                                        <TextBlock FontSize="12" Text="Base P." HorizontalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Margin="10">
                                        <TextBlock Text="{Binding PressureRange, FallbackValue='100 PSIA'}"
                                               HorizontalAlignment="Center" />
                                        <TextBlock FontSize="12" Text="P. Range" HorizontalAlignment="Center" />
                                    </StackPanel>
                                </UniformGrid>
                            </Grid>
                        </Border>
                    
                    <Border BorderThickness="0 0 0 0" 
                            Style="{StaticResource InfoSection}"
                             BorderBrush="LightGray">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon 
                                Kind="Pulse" Width="48" Height="48" Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                            <UniformGrid Grid.Column="1" 
                                     Columns="3"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Stretch">
                                <!--Region Pulser A--> 
                                <StackPanel Margin="5" HorizontalAlignment="Center">
                                    <TextBlock FontSize="12" Text="Pulser A" 
                                               Foreground="Gray"
                                               FontWeight="Bold" HorizontalAlignment="Center" />

                                    <TextBlock  Text="{Binding Instrument.PulseASelect, FallbackValue='UncVol'}" 
                                                HorizontalAlignment="Center"/>

                                    <TextBlock FontSize="14"  Text="{Binding Instrument.PulseAScaling, FallbackValue='2'}" 
                                                HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="12" Text="Scaling" HorizontalAlignment="Center" />
                                </StackPanel>
                                <!--End Region-->
                                <StackPanel Margin="5" HorizontalAlignment="Center">
                                    <TextBlock FontSize="12" Text="Pulser B" 
                                               Foreground="Gray"
                                               FontWeight="Bold" HorizontalAlignment="Center" />

                                    <TextBlock  Text="{Binding Instrument.PulseBSelect, FallbackValue='CorVol'}" 
                                                HorizontalAlignment="Center"/>

                                    <TextBlock FontSize="14"  Text="{Binding Instrument.PulseBScaling, FallbackValue='2'}" 
                                                HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="12" Text="Scaling" HorizontalAlignment="Center" />
                                </StackPanel>

                                <StackPanel Margin="5" HorizontalAlignment="Center">
                                    <TextBlock FontSize="12" Text="Pulser C" 
                                               Foreground="Gray"
                                               FontWeight="Bold" HorizontalAlignment="Center" />

                                    <TextBlock  Text="{Binding Instrument.PulseBSelect, FallbackValue='CorVol'}" 
                                                HorizontalAlignment="Center"/>

                                    <TextBlock FontSize="14"  Text="{Binding Instrument.PulseBScaling, FallbackValue='2'}" 
                                                HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="12" Text="Scaling" HorizontalAlignment="Center" />
                                </StackPanel>

                                <!--<StackPanel Margin="10"
                                    VerticalAlignment="Center" >
                                    <TextBlock  Text="{Binding Instrument.PulseASelect, FallbackValue='UncVol'}" HorizontalAlignment="Center"/>

                                    <TextBlock FontSize="12" Text="Pulser C" HorizontalAlignment="Center" />
                                </StackPanel>-->
                            </UniformGrid>

                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>


            <!--<UniformGrid Columns="2">
            <controls1:ValueDescriptionControl Label="Company Number" Value="{Binding Instrument.SiteNumber2}" />
            <controls1:ValueDescriptionControl Label="Serial Number" Value="{Binding Instrument.SerialNumber}" />
            <controls1:ValueDescriptionControl Label="Firmware Version"
                                                       Value="{Binding Instrument.FirmwareVersion}" />

            <controls1:ValueDescriptionControl Label="Base Pressure" Value="{Binding BasePressure}" />
            <controls1:ValueDescriptionControl Label="Base Temperature" Value="{Binding BaseTemperature}" />

            <controls1:ValueDescriptionControl Label="Pulser A Select"
