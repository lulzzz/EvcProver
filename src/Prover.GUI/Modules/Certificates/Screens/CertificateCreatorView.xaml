<UserControl x:Class="Prover.GUI.Modules.Certificates.Screens.CertificateCreatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:Prover.GUI.Common.Converters;assembly=Prover.GUI.Common"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="300"
             d:DesignWidth="500">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ProgressBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisible"
                                                  TrueValue="Visible"
                                                  FalseValue="Collapsed" />

            <Style TargetType="{x:Type ListBoxItem}">
                <Setter Property="IsSelected"
                        Value="{Binding IsSelected, Mode=TwoWay}" />
            </Style>
            <Style TargetType="materialDesign:PackIcon"
                   BasedOn="{StaticResource {x:Type materialDesign:PackIcon}}">
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Margin"
                        Value="4 0 4 0" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.75*" />
                <ColumnDefinition Width="0.25*" />
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="Clients"
                      DisplayMemberPath="Name"
                      materialDesign:HintAssist.Hint="Select a Client"
                      Grid.Column="0"
                      Margin="10" />

            <TextBlock Grid.Column="0"
                       Grid.Row="1"
                       FontSize="24"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Select a customer from the dropdown."
                       Visibility="{Binding DisplayHelpBlankState, Converter={StaticResource BoolToVisible}}" />

            <ProgressBar Grid.Row="1"
                         Grid.Column="0"
                         Style="{StaticResource MaterialDesignCircularProgressBar}"
                         Visibility="{Binding ShowLoadingIndicator, Converter={StaticResource BoolToVisible}}"
                         Value="0"
                         IsIndeterminate="True"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center" />
            <ListBox Grid.Column="0"
                     VerticalContentAlignment="Stretch"
                     Grid.Row="1"
                     Margin="5"
                     SelectionMode="Multiple"
                     Visibility="{Binding ShowTestViewListBox, Converter={StaticResource BoolToVisible}}"
                     x:Name="SearchResults"
                     HorizontalContentAlignment="Stretch">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Border BorderThickness="0 0 0 1"
                                            BorderBrush="Gray">
                                        <ContentPresenter />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <!--  Certificate Information  -->
            <Grid Grid.Column="1"
                  Grid.Row="1"
                  HorizontalAlignment="Left"
                  Margin="5 5 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="150" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Certificate #"
                           Grid.Row="0"
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Margin="5">
                    <TextBlock Text="{Binding NextCertificateNumber}" />
                </TextBlock>

                <materialDesign:PackIcon Grid.Column="0"
                                         Grid.Row="1"
                                         Kind="Account"
                                         Foreground="{Binding ElementName=TestedBy, Path=BorderBrush}"/>
                <TextBox x:Name="TestedBy"
                         Grid.Row="1"
                         Grid.Column="1"
                         HorizontalAlignment="Stretch"
                         materialDesign:HintAssist.Hint="Tested By"
                         Margin="2" />


                <materialDesign:PackIcon Grid.Row="2"
                                         Grid.Column="0"
                                         Kind="Verified"
                                         Foreground="{Binding ElementName=VerificationType, Path=BorderBrush}" />
                <ComboBox x:Name="VerificationType"
                          Grid.Row="2"
                          Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          materialDesign:HintAssist.Hint="Inspection Type"
                          Margin="2" />


                <Button Command="{Binding CreateCertificateCommand}"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="3"
                        Margin="10"
                        Content="Create" />


                <Grid Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Margin="5 15"
                      Grid.Row="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Print Existing Certificate" />
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                Grid.Row="1">
                        <TextBlock Text="Certificate #:" />
                        <TextBox Text="{Binding ExistingCertificateNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="10 0 0 0"
                                 Width="100" />
                    </StackPanel>
                    <Button x:Name="PrintExistingCertificateButton"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Margin="10"
                            Grid.Column="1"
                            Content="Print" />
                </Grid>
            </Grid>

            
        </Grid>
    </DockPanel>
</UserControl>