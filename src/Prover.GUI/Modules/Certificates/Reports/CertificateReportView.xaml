<UserControl x:Class="Prover.GUI.Modules.Certificates.Reports.CertificateReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             FontSize="10"
             FontWeight="Light"
             Background="White"
             Height="816" Width="1056">
    <UserControl.Resources>

        <Style x:Key="InstrumentStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="IsSelected" Value="{Binding Path=IsSelected, Mode=TwoWay}" />
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="ItemsControl.AlternationIndex" Value="1" />
                        <Condition Property="IsSelected" Value="False" />
                        <Condition Property="IsMouseOver" Value="False" />
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#EEEEEEEE" />
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Canvas Width="1056"
            Height="816">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="665" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1050"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0,0,0,2" Margin="2,5,0,2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="0.5*" />
                    </Grid.ColumnDefinitions>
                    <!--<Image Grid.Column="0" HorizontalAlignment="Left" Height="95" VerticalAlignment="Top" Width="305"
                           Source="../../../Resources/certificate.png" Stretch="Fill" Margin="10,5,5,5"
                           Grid.RowSpan="4" />-->

                    <StackPanel Grid.Row="0" Grid.Column="1">
                        <TextBlock FontSize="24" HorizontalAlignment="Center">Measurement Device</TextBlock>
                        <TextBlock FontSize="24" HorizontalAlignment="Center">Inspection Certificate</TextBlock>
                        <TextBlock FontSize="16" 
                                   Text="{Binding Path=CertificateDate, FallbackValue=1900-01-01}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <materialDesign:Card Grid.Column="2"
                                         HorizontalAlignment="Right"
                                         materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                         Grid.Row="0">

                        <StackPanel Orientation="Vertical" Margin="2">
                            <materialDesign:ColorZone Background="LightGray" Padding="2">
                                <TextBlock FontSize="10">Accredited Meter Verifier</TextBlock>
                            </materialDesign:ColorZone>

                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Vertical"
                                            Margin="2 2"
                                            HorizontalAlignment="Left">
                                    <TextBlock VerticalAlignment="Bottom" FontSize="10" Text="Certificate Number: ">
                                        <TextBlock FontSize="10" Text="{Binding Path=Certificate.Number}" />
                                    </TextBlock>
                                    <TextBlock Margin="0,0,0,0" FontSize="10">Accreditation Certificate: XXXXX</TextBlock>
                                    <TextBlock FontSize="10"> MC Registration #: XXXXX</TextBlock>
                                  
                                </StackPanel>

                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Right"
                                            Margin="10 2">
                                    <TextBlock>
                                        C.R. Wall and Co. Inc. <LineBreak />
                                        55 Thompson Dr. <LineBreak />
                                        Cambridge, Ontario<LineBreak />
                                        N1T 2E4<LineBreak />
                                        T 1 877 427 9255
                                    </TextBlock>
                                </StackPanel>


                            </StackPanel></StackPanel>
                    </materialDesign:Card>
                </Grid>
            </Border>

            <ListBox Grid.Row="1"
                     HorizontalContentAlignment="Stretch"
                     ItemsSource="{Binding Instruments}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0 0 0 1"
                                BorderBrush="Gray">
                            <ContentControl cal:View.Model="{Binding}"
                                            Width="Auto"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Border Grid.Row="2" BorderThickness="0,2,0,0" BorderBrush="Black" Margin="2,0,2,8">
                <Grid VerticalAlignment="Center" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1.5*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontWeight="Bold">
                                Verification Type:
                                <TextBlock FontWeight="Normal" Text="{Binding Path=Certificate.VerificationType}" />
                            </TextBlock>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontWeight="Bold">
                                Manufacturer:
                                <TextBlock FontWeight="Normal">Mercury Instruments</TextBlock>
                            </TextBlock>

                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontWeight="Bold">
                                Number of Instruments:
                                <TextBlock FontWeight="Normal" Text="{Binding Path=Certificate.InstrumentCount}" />
                            </TextBlock>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontWeight="Bold">
                                Seal Expiration Date:
                                <TextBlock FontWeight="Normal" Text="{Binding Path=Certificate.SealExpirationDate}" />
                            </TextBlock>

                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock>
                                Signed By:
                                <TextBlock>_________________________________________________________________________</TextBlock>
                            </TextBlock>


                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=Certificate.TestedBy}" />
                            <TextBlock>, Accredited Meter Verifier Designate</TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Canvas>
</UserControl>