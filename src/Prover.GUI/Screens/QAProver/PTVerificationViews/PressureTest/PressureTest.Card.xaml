<UserControl x:Class="Prover.GUI.Screens.QAProver.PTVerificationViews.PressureTest.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:cal="http://www.caliburnproject.org"

             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:Prover.GUI.Common.Converters;assembly=Prover.GUI.Common"
             xmlns:controls1="clr-namespace:Prover.GUI.Common.Controls;assembly=Prover.GUI.Common"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             TextElement.FontWeight="Light"
             TextElement.FontSize="16"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             mc:Ignorable="d" d:DesignWidth="365" d:DesignHeight="249">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter
            x:Key="BoolToHiddenConverter"
            TrueValue="Visible" FalseValue="Collapsed" />
    </UserControl.Resources>
    <!--**** START PRESSURE **** -->
    <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth0">
        <StackPanel Orientation="Vertical">
            <materialDesign:ColorZone Padding="3" Content="Pressure" Mode="PrimaryDark" Margin="2"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth0" />
            <controls1:PercentageControl HorizontalAlignment="Center" Margin="2"
                                         DisplayValue="{Binding TestRun.PercentError}"
                                         Passed="{Binding TestRun.HasPassed}" />

            <UniformGrid Columns="2" 
                         Margin="0">
                <controls1:ValueDescriptionControl Label="Gauge"
                                                   Value="{Binding GasGauge}" />
                <controls1:ValueDescriptionControl Label="EVC Reading"
                                                   Value="{Binding EvcGasPressure}" />
            </UniformGrid>
            <UniformGrid Columns="2" 
                         Margin="0"
                         Visibility="{Binding ShowAtmValues, Converter={StaticResource BoolToHiddenConverter}}">
                <controls1:ValueDescriptionControl Label="ATM Gauge" 
                                                   IsEditable="True" 
                                                   IsReadOnly="False"
                                                   Value="{Binding TestRun.AtmosphericGauge, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <controls1:ValueDescriptionControl Label="EVC ATM Reading"
                                                   Value="{Binding EvcAtmPressure}" />
            </UniformGrid>
            <UniformGrid Columns="2" Margin="0">
                <controls1:ValueDescriptionControl Label="Actual Factor"
                                                   Value="{Binding TestRun.ActualFactor}" />

                <controls1:ValueDescriptionControl Label="EVC Factor"
                                                   Value="{Binding TestRun.EvcFactor}" />

            </UniformGrid>

        </StackPanel>
    </materialDesign:Card>

    <!--**** END PRESSURE **** -->
</UserControl>