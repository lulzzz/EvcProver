<UserControl x:Class="Prover.GUI.Screens.QAProver.VerificationTestViews.PTVerificationViews.SuperFactorTest.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls1="clr-namespace:Prover.GUI.Common.Controls;assembly=Prover.GUI.Common"
             xmlns:instrumentInfo="clr-namespace:Prover.GUI.Screens.QAProver.VerificationTestViews.InstrumentInfo"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             TextElement.FontWeight="Medium"
             TextElement.FontSize="14"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             mc:Ignorable="d" d:DesignWidth="380" d:DesignHeight="157">
    <!--**** START SUPER **** -->
    <instrumentInfo:Card materialDesign:ShadowAssist.ShadowDepth="Depth0">
        <StackPanel Orientation="Vertical">
            <materialDesign:ColorZone Padding="2" Content="Supercompressibility Factor" Mode="PrimaryDark" Margin="2"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth1" />
            <controls1:PercentageControl
                HorizontalAlignment="Left"
                DisplayValue="{Binding PercentError}"
                Passed="{Binding Test.HasPassed}" />
            <UniformGrid Columns="2" Margin="2">
                <controls1:ValueDescriptionControl
                    Label="Actual Factor"
                    Value="{Binding Test.ActualFactor}" />
                <controls1:ValueDescriptionControl
                    Label="EVC Factor"
                    Value="{Binding EVCUnsqrFactor}" />
            </UniformGrid>
        </StackPanel>
    </instrumentInfo:Card>
    <!--**** END SUPER ****-->
</UserControl>