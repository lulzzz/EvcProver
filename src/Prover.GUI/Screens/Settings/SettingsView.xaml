<UserControl x:Class="Prover.GUI.Screens.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml" />
    </UserControl.Resources>

    <DockPanel >
        <materialDesign:ColorZone DockPanel.Dock="Top"
                                  Mode="PrimaryLight"
                                  Padding="16 8">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Settings"
                           Style="{StaticResource MaterialDesignHeadlineTextBlock}"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Vertical">
            <TabControl 
                        Margin="5">
                <TabItem Header="Test Configuration">
                    <TabItem.Content>
                        <StackPanel Orientation="Vertical"
                                    Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="StabilizeLiveReadings"/>
                                <TextBlock Text="Wait for EVC readings to stabilize within accepted tolerance before downloading correction data."/>
                            </StackPanel>
                            <materialDesign:Card Margin="8">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Mechanical Uncorrected Pulse Test Limit"
                                               Margin="5"
                                               Style="{StaticResource MaterialDesignSubheadingTextBlock}" />
                                    <DataGrid Margin="5"
                                              ItemsSource="{Binding MechanicalUncorrectedTestLimits, NotifyOnSourceUpdated=True}"
                                              CanUserSortColumns="True" CanUserAddRows="True" />
                                </StackPanel>
                            </materialDesign:Card>
                        </StackPanel>
                    </TabItem.Content>
                </TabItem>
                <TabItem>

                </TabItem>
            </TabControl>

            <Button Command="{Binding SaveSettingsCommand}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="8"
                    Content="SAVE"/>
        </StackPanel>
        
    </DockPanel>
</UserControl>