<UserControl x:Class="UnionGas.MASA.Dialogs.LoginDialog.LoginDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnionGas.MASA.Dialogs.LoginDialog"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Text="Employee Id:"></TextBlock>        
        <TextBox x:Name="EmployeeId" HorizontalAlignment="Center" Width="300"></TextBox>

        <Button x:Name="Close" HorizontalAlignment="Right" Margin="5">Login</Button>
    </StackPanel>
</UserControl>
